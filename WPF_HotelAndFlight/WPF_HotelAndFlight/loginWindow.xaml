<Window x:Class="WPF_HotelAndFlight.loginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_HotelAndFlight"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid Background="#FFFDE3BD">
        <TextBox x:Name="txUname" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="117,72,0,0"/>
        <TextBox x:Name="txPass" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="117,113,0,0"/>
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,72,0,0"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,118,0,0"/>
        <Button x:Name="btLogin" Content="Log in" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="117,176,0,0"/>
        <Label x:Name="label2" Content="Holly Holiday" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="95,29,0,0" FontFamily="Harrington" FontSize="16"/>
    </Grid>
</Window>
